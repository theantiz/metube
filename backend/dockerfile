# ======= STAGE 1: Build JAR =======
FROM eclipse-temurin:17-jdk AS build
WORKDIR /app

COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

RUN ./mvnw -q -ntp dependency:go-offline

COPY src src
RUN ./mvnw -q -ntp package -DskipTests

# ======= STAGE 2: Run App =======
FROM eclipse-temurin:17-jre
WORKDIR /app

COPY --from=build /app/target/*.jar app.jar

EXPOSE 8080
ENTRYPOINT ["java", "-jar", "app.jar"]
